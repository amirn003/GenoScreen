<%= simple_form_for(laboratory, url: laboratories_index_path) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs" style="width: 1000px;">
    <%= f.input :name, placeholder: "Enter Laboratory name" %>
    <%# <%= f.input :type, placeholder: "Enter analysis" %>
    <%= f.input :location, placeholder: "Location" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
